<!-- src/test/resources/test-project/pom2.xml -->
<project>
    <build>
        <plugins>
            <plugin>
                <groupId>io.github.kambaa</groupId>
                <artifactId>gmc-maven-plugin</artifactId>
                <version>0.0.1-SNAPSHOT</version>
                <configuration>
                    <skip>false</skip>
                    <failOnError>true</failOnError>
                    <file>src/test/resources/test-project/test-git-log.txt</file>

                    <enableDefaultIgnorePatterns>true</enableDefaultIgnorePatterns>
                    <customIgnorePatterns>
                        <pattern>^(C|c)hore(\([^)]+\))?:</pattern>
                    </customIgnorePatterns>

                    <enableDefaultMessageChecking>true</enableDefaultMessageChecking>
                    <customCheckingMethods>
                        <method>io.github.kambaa.utils.Utils.dummyCheckMessage</method>
                    </customCheckingMethods>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>